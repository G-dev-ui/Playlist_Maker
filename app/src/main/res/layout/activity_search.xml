<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image"
            style="@style/ImageSettingsStyle"
            android:padding="12dp"
            android:src="@drawable/back_ic" />

        <TextView
            style="@style/TextSettingsStyle"
            android:padding="12dp"
            android:text="@string/search_titel"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/search_string"

        >

        <EditText
            android:id="@+id/search_bar"
            style="@style/EditColorStily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableStart="@drawable/search_small"
            android:drawablePadding="8dp"
            android:hint="@string/search_titel"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingStart="14dp"
            android:singleLine="true"



            />

        <ImageView
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:src="@drawable/reset"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы искавли"
            style="@style/TextColor"
            android:textStyle="bold"
            android:layout_gravity="center"

            />
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/track_history"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
       android:scrollbars="vertical"/>

<Button
    android:id="@+id/clearing_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ButtomReset"
    android:textSize="16sp"
    android:layout_marginTop="24dp"
    android:text="Очистить историю"
    android:layout_gravity="center"
    />




    </LinearLayout>

    <FrameLayout
        android:id="@+id/empty_result_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:visibility="gone"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/smail"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/smail_l" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/smail" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="81dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/smail_r"

                    />

            </RelativeLayout>

            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/smail"
                android:layout_marginTop="16dp"
                android:text="Ничего не нашлось"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/error_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="gone"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/smail_l" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/smail_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="81dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/smail_r" />


            </RelativeLayout>

            <TextView
                android:id="@+id/error_message"
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Проблемы со связью"
                android:textStyle="bold" />

            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="Загрузка не удалась. Проверьте подключение к интернету"

                android:textStyle="bold" />

            <Button
                android:id="@+id/refresh_button"
                style="@style/ButtomReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/error_message"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Обновить"


                />
        </LinearLayout>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_track"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"

        />


</LinearLayout>

