<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".music_library.ui.playlist.PlayListFragment">

    <Button
        android:id="@+id/new_playlist"
        style="@style/ButtomReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="@string/new_playlists"
        android:textAllCaps="false"
        app:cornerRadius="16sp" />

    <LinearLayout
        android:id="@+id/noPlaylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
        tools:visibility="visible">
    <ImageView
        android:src="@drawable/light_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"/>
    <TextView
        style="@style/TextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_medialists1"
        android:layout_gravity="center"
        android:textStyle="bold"/>
        <TextView
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_medialists2"
            android:layout_gravity="center"
            android:textStyle="bold"/>
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlists_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_playlist"
        tools:listitem="@layout/view_playlist"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        />
</LinearLayout>