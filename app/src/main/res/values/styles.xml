<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColorBack">
       <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text2_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ImageSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">12dp</item>

    </style>
    <style name="EditColorStily">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#AEAFB4</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    <style name="TrackNameStily">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="TrackTimeAndArtist">
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="ButtomReset">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextColor">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextTrackinPlayer">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="tabStyle">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>

    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="bottomViewStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BottomNavMenu">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@animator/tab_color_day</item>
        <item name="itemTextColor">@animator/tab_color_day</item>
    </style>

    <style name="textLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/box_stroke</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="new_playlist_image_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="custom_alert_dialog_theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/custom_title_text_style</item>
        <item name="materialAlertDialogBodyTextStyle">@style/custom_dialog_body_text_style</item>
        <item name="buttonBarPositiveButtonStyle">@style/pos_button_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/neg_button_style</item>
    </style>
    <style name="custom_title_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="custom_dialog_body_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="pos_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_main</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="neg_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_main</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <string name="dialog_positive_btn" translatable="false">Завершить</string>
    <string name="dialog_negative_btn" translatable="false">Отмена</string>


    <style name="main">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settingsbuttonstyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/gray1</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="toolbaraudio" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/back_ic</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="audio_player_14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_sheet_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="bottom_sheet_line_style">
        <item name="android:backgroundTint">@color/gray1</item>
    </style>
    <style name="error_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_sheet_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginTop">24dp</item>
        <item name="android:text">Новый плейлист</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="origin">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="track_artist">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

</resources>